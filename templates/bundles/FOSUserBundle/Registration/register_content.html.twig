{% trans_default_domain 'FOSUserBundle' %}

<div class="container holder">

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
    {# {{ form_widget(form) }} #}
    
    <div class="mdc-text-field mdc-text-field--outlined">
        {# <input type="text" id="form_Title" name="form[Title]" class="mdc-text-field__input"> #}
        {{ form_widget(form.email, {'attr': {'class': 'mdc-text-field__input'}}) }}
        <div class="mdc-notched-outline">
            <div class="mdc-notched-outline__leading"></div>
            <div class="mdc-notched-outline__notch">
                {# <label for="tf-outlined" class="mdc-floating-label">{{ form_label(form.Title) }}</label> #}
                {{ form_label(form.email, null, {'label_attr' : {'class' : 'mdc-floating-label'}}) }}
            </div>
            <div class="mdc-notched-outline__trailing"></div>
        </div>
    </div>

    <div class="mdc-text-field mdc-text-field--outlined">
        {# <input type="text" id="form_Title" name="form[Title]" class="mdc-text-field__input"> #}
        {{ form_widget(form.username, {'attr': {'class': 'mdc-text-field__input'}}) }}
        <div class="mdc-notched-outline">
            <div class="mdc-notched-outline__leading"></div>
            <div class="mdc-notched-outline__notch">
                {# <label for="tf-outlined" class="mdc-floating-label">{{ form_label(form.Title) }}</label> #}
                {{ form_label(form.username, null, {'label_attr' : {'class' : 'mdc-floating-label'}}) }}
            </div>
            <div class="mdc-notched-outline__trailing"></div>
        </div>
    </div>

    <div class="mdc-text-field mdc-text-field--outlined">
        {# <input type="text" id="form_Title" name="form[Title]" class="mdc-text-field__input"> #}
        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'mdc-text-field__input'}}) }}
        <div class="mdc-notched-outline">
            <div class="mdc-notched-outline__leading"></div>
            <div class="mdc-notched-outline__notch">
                {# <label for="tf-outlined" class="mdc-floating-label">{{ form_label(form.Title) }}</label> #}
                {{ form_label(form.plainPassword.first, null, {'label_attr' : {'class' : 'mdc-floating-label'}}) }}
            </div>
            <div class="mdc-notched-outline__trailing"></div>
        </div>
    </div>

    <div class="mdc-text-field mdc-text-field--outlined">
        {# <input type="text" id="form_Title" name="form[Title]" class="mdc-text-field__input"> #}
        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'mdc-text-field__input'}}) }}
        <div class="mdc-notched-outline">
            <div class="mdc-notched-outline__leading"></div>
            <div class="mdc-notched-outline__notch">
                {# <label for="tf-outlined" class="mdc-floating-label">{{ form_label(form.Title) }}</label> #}
                {{ form_label(form.plainPassword.second, null, {'label_attr' : {'class' : 'mdc-floating-label'}}) }}
            </div>
            <div class="mdc-notched-outline__trailing"></div>
        </div>
    </div>

    <div class="logIn d-flex justify-content-center">
        <input class="btn btn-success" type="submit" id="_submit" name="_submit" value="{{ 'registration.submit'|trans }}" />
    </div>
{{ form_end(form) }}

</div> 

<script>
        [].forEach.call(document.querySelectorAll('.mdc-text-field'), function(el) {
            mdc.textField.MDCTextField.attachTo(el);
        });
        [].forEach.call(document.querySelectorAll('.mdc-select'), function(el) {
            mdc.select.MDCSelect.attachTo(el);
            select.listen('MDCSelect:change', () => {
                alert(`Selected option at index ${select.selectedIndex} with value "${select.value}"`);
            });
        });
</script>
